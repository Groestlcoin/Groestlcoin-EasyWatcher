<Window x:Class="WatchOnlyGroestlcoinWallet.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="303" Width="327" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" FontSize="14" Icon="myICO.ico">
    <StackPanel>
        <TextBlock x:Name="txtGithubLink" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Top">
          <Hyperlink NavigateUri="https://github.com/Groestlcoin/Groestlcoin-EasyWatcher" RequestNavigate="Hyperlink_RequestNavigate">
            Github Repository Link
          </Hyperlink>
        </TextBlock>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Developer - Yokomoko" Margin="0,15,0,0" FontSize="22" FontWeight="Bold" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top">
            <Hyperlink x:Name="DonationHyperLink">
                Donate Groestlcoin
            </Hyperlink>
        </TextBlock>
        <TextBox x:Name="txtDonate" HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" Width="292" IsReadOnly="True" TextAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,46,0,0" TextWrapping="Wrap" Text="Groestlcoin EasyWatcher" VerticalAlignment="Top" FontSize="22" Width="292" FontWeight="Bold" TextAlignment="Center"/>
    </StackPanel>
</Window>
